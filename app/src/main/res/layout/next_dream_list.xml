<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >

    <ImageView
        android:id="@+id/nextStoryImage"
        android:layout_marginLeft="32.5dp"
        android:layout_marginTop="16dp"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/nextStoryDescription"
        app:layout_constraintEnd_toStartOf="@+id/nextStoryDescription"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextStoryImage"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        />
    <TextView
        android:id="@+id/nextStoryHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/nextStoryImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginLeft="27.5dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:text="sadsadsadasdasda asdasdasdasdassdds"
        />
    <TextView
        android:id="@+id/nextStoryDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nextStoryHeading"
        app:layout_constraintStart_toStartOf="@id/nextStoryHeading"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=" dsadasdasdasdasdas dsadasdasdasdasdas"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"


        />

</android.support.constraint.ConstraintLayout>