<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/dreamCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >


    <RelativeLayout
        android:layout_margin="16dp"
        android:id="@+id/dateView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/small_round"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Aug"
            android:textAlignment="center"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/dreamDescription"
        app:layout_constraintEnd_toStartOf="@+id/dreamDescription"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateView"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        />

    <TextView
        android:id="@+id/dreamTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="qlbin albin albin albin alvin albin albin albin"

        app:layout_constraintTop_toTopOf="@id/dateView"
        app:layout_constraintStart_toEndOf="@id/dateView"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="46dp"
        />

    <TextView
        android:id="@+id/dreamDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dreamTitle"
        app:layout_constraintStart_toEndOf="@id/dateView"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="asdjhagsdjhgas"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        />

</android.support.constraint.ConstraintLayout>